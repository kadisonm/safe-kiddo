{
  "manifest_version": 3,
  "name": "Safe Kiddo",
  "version": "1.0.0",
  "description": "A browser extension that provides parental controls to keep your kiddo safe online.",
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "notifications",
    "downloads",
    "storage"
  ]
}
