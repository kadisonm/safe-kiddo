{
  "manifest_version": 3,
  "name": "Safe Kiddo",
  "version": "1.0.0",
  "description": "The browser extension that gives you control of your kiddo's safety online.",
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon16.png"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "notifications",
    "downloads",
    "storage"
  ]
}
